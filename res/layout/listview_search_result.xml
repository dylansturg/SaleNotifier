<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_action_photo" />

    <TextView
        android:id="@+id/search_result_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/search_result_image"
        android:layout_toRightOf="@id/search_result_image"
        android:layout_marginBottom="10dp"
        android:text="@string/search_result_subtitle" />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_result_image"
        android:layout_above="@id/search_result_subtitle"
        android:text="@string/search_result_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>