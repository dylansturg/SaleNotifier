<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rosehulman.salenotifier"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="SaleNotifier Tests"
        android:targetPackage="edu.rosehulman.salenotifier" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".TrackedItemsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemSearchActivity"
            android:label="@string/title_activity_item_search"
            android:parentActivityName=".TrackedItemsActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:parentActivityName=".ItemSearchActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".BarcodeScannerActivity"
            android:label="@string/title_activity_barcode_scanner"
            android:parentActivityName=".ItemSearchActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".AppSettingsActivity"
            android:label="@string/title_activity_app_settings"
            android:parentActivityName=".TrackedItemsActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".ItemSettingsActivity"
            android:label="@string/title_activity_item_settings"
            android:parentActivityName=".TrackedItemsActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".ItemDatabaseContentActivity"
            android:label="@string/title_activity_item_database_content"
            android:parentActivityName=".TrackedItemsActivity"
            android:launchMode="singleTop" >
        </activity>

        <receiver android:name=".service.SaleNotifierWakefulReceiver" >
        </receiver>
        <receiver
            android:name=".service.SaleNotifierBootReceiver"
            android:enabled="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
        </receiver>

        <service android:name=".service.ItemUpdateBackgroundService" />
        <service android:name=".service.DeletePricesBackgroundService" />

        <activity
            android:name="edu.rosehulman.salenotifier.ItemCurrentActivity"
            android:label="@string/title_activity_item_current"
            android:parentActivityName=".TrackedItemsActivity"
            android:launchMode="singleTop" >
        </activity>
    </application>

</manifest>